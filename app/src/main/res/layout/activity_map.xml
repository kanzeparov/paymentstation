    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="650dp">
    <fragment
        class="com.here.android.mpa.mapping.MapFragment"
        android:id="@+id/mapfragment"

        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    </LinearLayout>

</LinearLayout>